<h1 class="language"><%= "Please choose language for translation".t %></h1>
<p>
    <span class="globalize_bug"><%= "Use this sparingly".t %></span>: <%= link_to "Get strings to translate".t, :action => "get_translatable_strings" %>
</p>
<% if Locale.language -%>
<h1 class="language"><%= "Language: " .t + Locale.language.native_name %></h1>
<% end -%>
<% if !Locale.base? -%>
<dl id="translation_form">
    <dt class="header">
        <%= 'Base Language'.t -%>
    </dt>
    <dd class="header">
        <%= 'Translation'.t %>
    </dd>
    <br/>
    <% @view_translations.each do |tr| -%>
    <dt>
        <%= tr.tr_key %>
    </dt>
    <dd id="tr_<%= tr.id %>">
        <%= render :partial => 'translation_text' %>
        <%- form_tag ( :action => :set_translation_text, :id => tr.id ) do %>
        <%= text_field_tag 'translation', tr.text || tr.tr_key, :size => 30 %>
        <%= submit_tag( "translate" ) .t %>
        <% end -%>
    </dd>
    <br/>
    <% end -%>
</dl>
<% end -%>