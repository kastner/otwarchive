<h1>Fandoms</h1>
<ol>
<%- for medium in @media -%>
  <li id="medium_<%= medium.id %>" class="category <%= cycle :odd, :even %>">
    <h3><%= link_to medium.name, medium_path(medium) %></h3>
    <ol>
      <%- for fandom in @fandom_listing[medium] -%>
      <li><%= print_fandom_works_link(fandom) %></li>
      <%- end -%>
    </ol>
    
    <%- if medium.tags.valid.count > 5 -%>
    <p><%= link_to "All " + medium.name + "...", medium_path(medium) %></p>
    <%- end -%>
  </li>
<%- end -%>
</ol>