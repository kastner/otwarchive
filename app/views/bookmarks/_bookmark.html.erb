<!-- This partial requires local variable 'bookmark' -->
<div class="bookmark">

  <p>
    <% if bookmark.private %><%= image_tag("lockblack.png", :size => "15x15", :alt => "(Private)") %><% end %>
    <% if bookmark.bookmarkable_type == "ExternalWork" %>
      <%= link_to bookmark.bookmarkable.title, bookmark.bookmarkable.url %> by <%= bookmark.bookmarkable.author %>
    <% else %>
      <% if bookmark.bookmarkable.restricted %><%= image_tag("lockblue.png", :size => "15x15", :alt => "(Restricted)") %><% end %>
      <%= link_to bookmark.bookmarkable.title, bookmark.bookmarkable %> by <%= byline(bookmark.bookmarkable) %>
    <% end %>  

    <br /><%=sanitize_format bookmark.bookmarkable.summary %>
  </p>
  
  <p>
    <%- unless bookmark.notes.blank? -%>
      User's notes: <br />
      <%= bookmark.notes %> - <% if bookmark.user %><%= link_to bookmark.user.login, bookmark.user %><% end %>
    <%- else -%>
      Bookmarked by: <%= link_to bookmark.user.login, bookmark.user %>
    <%- end -%>
  </p>

  <p>
    <%- unless bookmark.tag_string.blank? -%>
      User's tags: 
      <% bookmark.tags.each do |tag| -%>
        <%= link_to(tag.name, tag_path(tag))%>
      <% end -%>
    <% end %>
  </p>
  
  <% if is_author_of?(bookmark) %>
    <p>
      <%= link_to "Edit".t, edit_bookmark_path(bookmark) %> | 
      <%= link_to "Delete".t, bookmark, :confirm => 'Are you sure?', :method => :delete %>  
    </p>
  <% end %>
  
</div>
