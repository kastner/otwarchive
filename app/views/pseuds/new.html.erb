<h1>New pseud</h1>

<%= error_messages_for :pseud %>

<% form_for(@pseud) do |f| %>
  <p>
    <b>User</b><br />
    <%= f.text_field :user %>
  </p>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Is default</b><br />
    <%= f.check_box :is_default %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', pseuds_path %>
