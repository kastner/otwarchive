<% form_for([@user, @pseud]) do |f| %>
  <p>
    <b><%=h 'Name'.t %></b><br />
	<% if @pseud.name && @user.login == @pseud.name -%>
		<b><%=h @pseud.name -%></b> (<%=h "cannot change your fallback pseud".t -%>)
	<% else -%>
    	<%= f.text_field :name %>
	<% end -%>
  </p>

  <p>
    <b><%=h 'Description'.t %></b><br />
    <%= f.text_area :description, :rows => 4, :cols => 60 -%>
  </p>

  <p>
    <b><%=h 'Is default'.t %></b><br />
    <%= f.check_box :is_default %>
  </p>

  <p>
    <%= f.submit button_text %>
  </p>
<% end %>
