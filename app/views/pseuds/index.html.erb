<h1><%= t('pseuds.index.pseuds_for', :default => "Pseuds for {{user}}", :user => @user.login) -%></h1>

<% if current_user == @user -%>
<ul class="navigation">
<li><%= link_to 'New pseud', new_user_pseud_path(@user) %></li>
</ul>
<% end -%>
<table>
<caption>Pseuds management</caption>
  <tr>
    <th scope="col"><%=h 'Name' %></th>
    <th scope="col"><%=h 'Description' %></th>
    <th scope="col"><%=h 'Is default' %></th>
    <th>&nbsp;</th>
  </tr>
<% for pseud in @pseuds %>
  <tr>
    <th scope="row"><%=h pseud.name %></th>
    <td><%=h pseud.description %></td>
    <td><%=h pseud.is_default %></td>
    <td class="navigation">
      <ul class="navigation">
        <li><%= link_to 'Show', [@user, pseud] %></li>
        <% if current_user == @user -%>
          <li><%= link_to 'Edit', [:edit, @user, pseud] -%></li>
          <li><%= link_to 'Orphan Works', {:controller => 'orphans', :action => 'new', :pseud_id => pseud.id} -%>
          <% unless @user.login == pseud.name || pseud.is_default -%></li>
            <li><%= link_to 'Delete', [@user, pseud], :confirm => 'Are you sure?', :method => :delete %></li>
          <% end -%>
        <% end -%>
      </ul>
    </td>
  </tr>
<% end %>
</table>
<% if current_user == @user -%>
<ul class="navigation">
<li><%= link_to 'New pseud', new_user_pseud_path(@user) %></li>
</ul>
<% end -%>

