<h1><%=h @series.title %></h1>
<p>
  <%=h 'Series begun:'.t %> <%=h @series.created_at.localize("%d %B %Y") %><br />
  <%=h 'Works included:'.t %> <%= @series.works.length %><br />
  <%=h 'Authors:'.t %> <%= print_pseud_list(@series.pseuds) %>
</p>

<p><strong><%=h 'Description:'.t %> </strong> <%= @series.summary unless @series.summary.blank? %></p>

<p><strong><%=h 'Notes:'.t %> </strong> <%= @series.notes unless @series.notes.blank? %></p>

<%- if is_author_of?(@series) -%>
  <p>
    <%= link_to "Edit".t, edit_series_path(@series) %> | 
    <%= link_to 'Delete series'.t, @series, :confirm => 'Are you sure?'.t, :method => :delete %>
  </p>
<%- end -%>

<%- if logged_in_as_admin? -%>
<!-- BEGIN admin options -->
<%= render :partial => 'admin/admin_options', :locals => {:item => @series} %>
<%- end -%>

<ol>
  <%- for work in @series.works -%>
    <%= render :partial => 'works/work_blurb', :locals => {:work => work} %>
  <%- end -%>
</ol>
