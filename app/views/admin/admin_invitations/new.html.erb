<h1><%= "Invite a User" .t %></h1>

<% form_for :invitation, @invitation, :url => { :controller => 'admin/admin_invitations', :action => :create } do |f| %>
    <dl>
      <dt><%= f.label :recipient_email, "Email address" %></dt>
      <dd><%= f.text_field :recipient_email %></dd>
    </dl>
    <p><%= f.submit "Invite!" %></p>
<% end %>