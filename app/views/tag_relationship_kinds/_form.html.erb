<%- form_for(@tag_relationship_kind) do |f| -%>
  <dl>
    <dt><%= f.label :name, 'Name:'.t %></dt> 
    <dd><%= f.text_field("name", :size => 12) %></dd>

    <dt><%= f.label :verb_phrase, 'Phrase:'.t %></dt> 
    <dd><%= f.text_field("verb_phrase") %></dd>

    <dt><%= f.label :distance, 'Distance:'.t %></dt>
    <dd>
      <%= f.radio_button("distance", 0) %> 0
      <%= f.radio_button("distance", 1, :checked => 'checked')%> 1
      <%= f.radio_button("distance", 2) %> 2
      <%= f.radio_button("distance", 3) %> 3 
      <%= link_to_help "tag-relationship-distance" %>
    </dd>
  
    <dt><%= f.label :reciprocal, 'Reciprocal:'.t %></dt> 
    <dd>
      <%= f.check_box("reciprocal") %>
      <%= link_to_help "tag-relationship-reciprocal" %>
    </dd>
  </dl>
  
  <p><%= f.submit button_name %><p>
<%- end -%>