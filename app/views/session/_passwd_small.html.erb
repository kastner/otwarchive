<p>
	<%= label_tag 'login', 'User name:'  %>
	<%= text_field_tag 'login', '' %>
	<%- if ArchiveConfig.USE_OPENID -%>
    <%= link_to_remote image_tag("openid.png", :class => 'openid', :alt => 'OpenID', :title => 'OpenID') , 
																	 {:url => {:controller => :session, :action => 'openid_small'}}, 
							 										 :href => url_for(:overwrite_params => { :use_openid => true }) 
																	 -%>
    <%- end -%>
	<%= label_tag 'password', 'Password:'  %>
	<%= password_field_tag 'password', '' %>
</p>
<p class="footnote">
	<%= check_box_tag('remember_me', '1', false) %>
	<%= label_tag 'remember_me', 'Remember me'  %>&nbsp;| 
	<%= link_to 'forgot password?', new_password_path %>
</p>
<p class="submit">
	<%= submit_tag 'Login', :class => 'submit' %>
</p>