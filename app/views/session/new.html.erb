<!-- loginform floated right -->
<%- if @restricted -%>
  <h3><%=h "Sorry!".t %></h3>
  <p>
    <%=h "This story is only available to registered users of the Archive. ".t %>
    <%=h "If you already have an Archive of Our Own account, sign in now. ".t %>
    <%=h "Or join us for free - it's easy.".t %>
  </p>
<%- else -%>
  <h3><%=h "Login".t %></h3>
  <p>
    <strong><%=h "Reminder:".t %></strong>
    <span><%=h "This site is in early beta. Things may break or crash without notice. Please".t %></span>
    <a href="http://code.google.com/p/otwarchive/issues/entry"><%=h "report".t %></a>
    <span><%=h "any pesky bugs and give us your feedback!".t %></span>
  </p>
<%- end -%>

<% form_tag session_path do -%>
<!-- renders either the normal or openid version of the form -->
<div id="loginform">
  <%- if params[:use_openid] -%>
  <%= render :partial => "openid" %>
  <%- else -%>
  <%= render :partial => "passwd" %>
  <%- end -%>
</div>
<%- end -%><!-- END form -->

<%- if ArchiveConfig.ACCOUNT_CREATION_ENABLED -%>
<!-- Create account link -->
<p><%= "New tester?" .t %> <%= link_to 'Create an account now.' .t, new_user_path %></p>
<%- end -%>
