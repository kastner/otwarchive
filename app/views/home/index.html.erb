<!-- BEGIN BETA CAVEATS! -->
<%- unless request.user_agent =~ /Firefox/i -%>
  <%= javascript_tag "alert('Sorry! The current beta version of the site has been optimized for Firefox and may not display properly in your browser just yet.')" -%>
<%- end -%>

<noscript>
  <div id="javascript-warning">
    <p>
      While we've done our best to make this site accessible without javascript, 
      it will work better and look prettier with it enabled. 
      Please consider turning it on! Also, be aware that the current beta version of the 
      site has been optimized for Firefox and may not display properly in other browsers just yet. 
    </p>
  </div> 
</noscript>
<!-- END BETA CAVEATS! --> 
<div id="signin">  
  <%- if logged_in? || logged_in_as_admin? -%>
    <%= render :partial => 'session/greeting' -%>
  <%- else -%>
    <%= render :partial => 'session/login' -%>
  <%- end -%>
</div>
<h1><span><%= ArchiveConfig.APP_NAME.t -%>
  <% unless ArchiveConfig.REVISION.blank? %>(rev. <%= ArchiveConfig.REVISION %>)<% end %></span>
</h1>
<h2><%=h 'A project of the'.t %> <a href="http://transformativeworks.org"><%=h 'Organization For Transformative Works'.t %></a></h2>
<hr class="clear" />
<div class="wrapper">
	<h3><%=h "Share your fan works".t -%></h3>
	<h4><%= link_to 'People'.t, :controller => 'users', :action => 'index' %></h4>
	<ul class="meters">
		<li><span><%= @user_count %></span> <%=h ' ' + 'users to date'.t %></li>
		<%- if @random_user -%>
			<li><%=h 'Try a new author'.t + ': ' %> <span><%= link_to @random_user.login, @random_user -%></span></li>
		<%- end -%>
	</ul>
</div>
<div class="wrapper">
	<h3><%=h 'Discover new favorites'.t %></h3>
	<h4><%= link_to 'Fandoms'.t, :controller => 'media', :action => 'index' %></h4>
	<ul class="meters">
		<li><span><%= @fandom_count -%></span> <%=h ' ' + 'fandoms to date'.t %></li>
		<%- unless @latest_fandom.blank? -%>
			<li><%=h 'Latest updated'.t + ': '%> <span><%= link_to @latest_fandom.name, tag_works_path(@latest_fandom) -%></span></li>
		<%- end -%>
	</ul>
</div>
<div class="wrapper">
	<h3><%=h "Explore the possibilities".t -%></h3>
	<h4><%= link_to 'Works'.t, :controller => 'works', :action => 'index' %></h4>
	<ul class="meters">
		<li><span><%= @work_count %></span> <%=h ' ' + 'works to date'.t %></li>
		<%- if @latest_work -%>
			<li><%=h 'Latest work'.t + ': '%> <span><%= link_to @latest_work.title, @latest_work -%></span></li>
		<%- end -%>
	</ul>
</div>
<p id="closed-sign"><%= link_to image_tag('closed.jpg', :alt => "Hey, we're in closed beta right now, but please come in and browse!".t), works_path -%></p>
