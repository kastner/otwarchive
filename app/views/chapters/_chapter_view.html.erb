<% form_for([@work, @chapter]) do |f| %>

  <p><%=h @work.metadata.title %> - Chapter <%=h @chapter.position %></p>
  
  <p>Authors: 
    <% for pseud in @pseuds %>
      <%=h pseud.name %>  
    <% end %>
  </p>
  
  <!-- Need to put "display:none" into a proper css file when doing the real styling here -->
  <select name="pseud[id][]" multiple="multiple" style="display : none;">
    <%= options_from_collection_for_select(@pseuds, :id, :name, @selected) %>
  </select>

  <% fields_for :metadata_attributes, @work.metadata do |m| %>
    <p>Title: <%=h @chapter.metadata.title %></p>
    <%= m.hidden_field :title, :value => "#{@chapter.metadata.title}" %>    

    <p>Summary: <%=h @chapter.metadata.summary %></p>
    <%= m.hidden_field :summary, :value => "#{@chapter.metadata.summary}" %>

    <p>Notes: <%=h @chapter.metadata.notes %></p>
    <%= m.hidden_field :notes, :value => "#{@chapter.metadata.notes}" %> 
  <% end %>


  <p><%=h @chapter.content %></p>
  <%= f.hidden_field :content, :value => "#{@chapter.content}" %>

  <p><%= submit_tag 'Create', :name => 'create_button' %></p>

<% end %>