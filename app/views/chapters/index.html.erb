<h1><%=h @work.metadata.title %></h1>

<% for chapter in @chapters %>
  <%= render :partial => 'chapter', :locals => {:chapter => chapter} %>
<% end %>

<br />

<%- for pseud in @work.pseuds -%>
  <%- if logged_in? && current_user.pseuds.include?(pseud) -%>
    <%= link_to 'New chapter', new_work_chapter_path(@work) %>
  <%- end -%>
<%- end -%>
