<h1><%= link_to h(@work.title), @work -%></h1>

<% for chapter in @chapters %>
  <% if chapter.posted? || is_author_of?(chapter) -%>
    <%= render :partial => 'chapters/chapter', :locals => {:chapter => chapter} %>
  <% end -%>
<% end %>

<br />

<%- if is_author_of?(@work) -%>
  <%= link_to 'New chapter', new_work_chapter_path(@work) %>
<%- end -%> 

<!-- BEGIN comment section -->
<div id="comments-display">
  <p>
    <%= link_to_function('Add a comment', "Element.toggle('add-comment')", :href => new_chapter_comment_path(@work.last_chapter)) %>
  </p>
                  
  <div id="add-comment" style="display : none;">   
    <%= render :partial => @comment = Comment.new, :locals => {:commentable => @work.last_chapter, :button_name => 'Create'}%> 
  </div>  

  <!-- BEGIN comments -->
  <% unless @comments.empty? %>
    <div id="show_comments_link">
      <p>
        <%= index_show_hide_comments_link %>
			</p>
	  </div>
  <% end %>
  
  <div id="comments">   
    <%- if params[:show_comments] -%>   
      <%= render :partial => 'comments/comment_view' %>
	  <%- end -%>  
  </div>
  
  <!-- END comments -->
</div>
<!-- END comment section -->
