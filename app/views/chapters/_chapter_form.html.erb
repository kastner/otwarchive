<% form_for([@work, chapter]) do |f| %>
  
  <p>
  	<b>Author:</b><br />
 		<%= collection_select :pseud, :id, @work.pseuds, :id ,:name, {}, :multiple => 'multiple' %>
	</p> 
	
	<p>
    <%= link_to_function('Add new co-authors', "Element.toggle('extra-pseuds')") %>
  </p>
	
	<div id="extra-pseuds" style="display : none;">
	  <b>Co-Authors</b><br />
	  <%= text_field_tag :extra_pseuds %>
    <p>Example: <strong>username:pseud, username:pseud</strong></p>
	</div>
  
  <% fields_for :metadata_attributes, chapter.metadata do |m| %>
    <p>
      <b>Chapter Title</b><br />
      <%= m.text_field :title %>
    </p>

    <p>
      <b>Chapter Summary</b><br />
      <%= m.text_area :summary %>
    </p>

    <p>
      <b>Chapter Notes</b><br />
      <%= m.text_area :notes %>
    </p>
  <% end %>

  <p>
    <b>Chapter text</b><br />
    <%= f.text_area :content %>
  </p>
  
  <% fields_for :work_attributes, chapter.work do |w| %>
    <p>
      <b>Is this the last chapter?</b><br />
      <%= w.check_box :is_complete %> Yes
    </p>
  <% end %>

  <p>
    <%= f.submit button_text %>
  </p>
<% end %>
