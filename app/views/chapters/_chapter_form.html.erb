<div id="story-form">
<% form_for([@work, chapter], :html => {:name => "storyForm"}) do |f| %>
  <p>
    <%=h 'Chapter'.t %> <%= f.text_field :current_position, :class => "number-field" %> <%=h 'of'.t %> <%= f.text_field :wip_length, :class => "number-field" %> 
  </p>

	<dl>
		<dt><%= f.label :title, h('Chapter title').t %></dt>
		<dd>
		  <%= f.text_field :title, :class => "storyinputfield", :live => true %>
      <%= link_to_help "story-title" -%>
    </dd>		
   
     	<dt><%= f.label :content, h('Chapter, in plain text with limited HTML*').t, :class => "required" %></dt>
		<dd>
		  <%- use_tinymce -%>
		  <a href="javascript:addEditor('content');"><%=h 'Rich text'.t %></a>  <a href="javascript:removeEditor('content');"><%=h 'HTML'.t %></a><br />
		  <%= f.text_area :content, :class => "mce-editor", :id => "content" %>
		
			<script>
				var content = new LiveValidation('content', { wait: 500 });
				content.add(Validate.Length, {"failureMessage": "<%= "must be less than %d letters long."/ArchiveConfig.CONTENT_MAX -%>", 
											  "maximum": <%= ArchiveConfig.CONTENT_MAX -%>});
				content.add(Validate.Length, {"failureMessage": "<%= "must be at least %d letters long."/ArchiveConfig.CONTENT_MIN -%>", 
											  "minimum": <%= ArchiveConfig.CONTENT_MIN -%>});
				content.add(Validate.Presence, {"failureMessage": "is required.", "validMessage": ""})
			</script>
		</dd>
		</dl>
    
		<!-- Author dropdown (pseud_id) -->
		<%- if @pseuds.size > 1 -%>
	  <fieldset title="Choose Your Pseud">
  	<%- else -%>
	  <fieldset style="display:none;">
		<%- end -%>	
    
    <dl>
      <dt><%= label :pseud, :id, h('Select author/pseudonym(s)').t %></dt>
      <dd>
        <select name="chapter[author_attributes][ids][]" multiple="multiple">
          <%= options_from_collection_for_select(@pseuds, :id, :name, @selected_pseuds) %>
        </select>         
      </dd>
      
   		<%- if @pseuds.size > 1 -%>
        <dd><%= link_to 'Create new pseud?'.t, new_user_pseud_path(current_user) %></dd>
		  <%- end -%>
    </dl>
    </fieldset>

      
    <dl><dd><%= link_to_function(h('Add co-authors?').t, "Element.toggle('co-authors')") %></dd></dl>

    <div id="co-authors">
      <fieldset title="Add Co-Authors" id="coauthormanage">
        <dl>
          <dt><%= f.label :storycoauthor, "Enter co-author name(s):".t %></dt>
          <dd>
            <%= text_field_with_auto_complete :pseud, :byline, { :size => 50 }, 
             			  { :url => {:controller => 'pseuds', :action => 'choose_coauthors'}, :method => :get, :param_name => 'search', 
                			:tokens => ',', :min_chars => 2, :skip_style => true } %>
          </dd>
        </dl>
     </fieldset>    
     </div>
   
    <dl>      
      <dt><%= f.label :summary, "Chapter summary (max %d letters)".t/ArchiveConfig.SUMMARY_MAX %></dt>
      <dd><%= f.text_area :summary, :live => true %></dd>

      <dt><%= f.label :notes, "Chapter notes (max %d letters)".t/ArchiveConfig.NOTES_MAX %></dt>
      <dd><%= f.text_area :notes, :live => true %></dd>
    </dl>
    <p>
      <%= submit_tag h('Preview').t, :name => 'preview_button' %>
      <%= button_to_function h('Cancel').t, "javascript:history.back()" %>      
    </p>

<% end %>
</div>