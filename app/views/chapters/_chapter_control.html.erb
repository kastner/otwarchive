<!-- Requires locals 'work' and 'chapter' -->
<ul class="navigation">
  <%- if work.number_of_posted_chapters > 1 -%>
    <%= next_and_previous_links_listitems(work, chapter) -%>
    <li><%= link_to 'View entire work'.t, work_path(work) %></li> 
  <%- end -%>
  
  <%- if is_author_of?(work) -%> 
    <li><%= link_to 'Add a new chapter'.t, new_work_chapter_path(work) %></li>
	<li><%= link_to 'Edit work'.t, edit_work_path(work) %></li>
  <%- end -%> 
</ul> 
