<!-- Requires locals 'work' and 'chapter' -->
<ul class="navigation">
  <%- if work.number_of_posted_chapters > 1 -%>
    <%= next_and_previous_links_listitems(work, chapter) -%>
    <li><%= link_to t('control_view_entire_work', :default => 'View Entire Work'), work_path(work) %></li> 
  <%- end -%>
  
  <%- if is_author_of?(work) -%> 
    <li><%= link_to t('control_add_new', :default => 'Add A New Chapter'), new_work_chapter_path(work) %></li>
	<li><%= link_to t('control_edit_work', :default => 'Edit Work'), edit_work_path(work) %></li>
  <%- end -%> 
</ul> 
