<h1><%=h t('forgot_your_password', :default => "Forgot your password?") %></h1>
<p><%=h t('never_fear', :default => "Never fear - if you've forgotten your password, we can send you a  link to reset it.") %></p>
<p><%=h t('please_tell_us', :default => "Please tell us the user name or email address you used when you signed up for your Archive account.") %></p>

<%- form_tag passwords_path do -%>
  <p>
  	<%= label_tag 'login', t('email_or_name', :default => "Email address <strong>or</strong> user name:") -%>
	<%= flash_field(:login) -%>	
  	<%= text_field_tag 'login', '' -%> 
  	</p>
    <p class="submit"><%= submit_tag t('reset_password', :default => 'Reset password') %>
  </p>

<%- end -%>
