<dl id="story-meta">

  <%- @tag_categories.each do |category| -%>
    <dt class="<%= category.display_name.downcase -%>">
         <%= category.display_name %>:
    </dt>
	<% if current_user != :false && category.name == "Warnings" && current_user.preference && current_user.preference.hide_warnings && !is_author_of?(@work) -%>
	<%= "Warnings are hidden.".t %>
	<%- else -%>
    <%- @work.tags.by_category(category).each do |tag| -%>
      <dd class="<%= category.display_name.downcase -%>">
        <%= link_to(tag.name, tag_path(tag)) -%>
      </dd>
	  <%- end -%>
    <%- end -%>
  <%- end -%>
<!%- end -%>
</dl> 
