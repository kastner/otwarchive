    <!--There must be a more elegant way of assigning class/id to elements, mustn't there? -->
    <li class="story" id="<%=h work.id %>">

      <h3 title="Story Title">
        <% if work.restricted %><%= image_tag("lockblue.png", :size => "15x15", :alt => "(Restricted)") %><% end %>
        <%= link_to sanitize(work.metadata.title), work %>
      </h3>

  	  by <%= render :partial => 'pseuds/byline', :locals => { :creation => work } -%>

      <div class="story-date">
        <%=h work.created_at.localize("%d %B %Y") %><br />
      </div>

      <p class="story-tags">
        <% work.tags.each do |tag| %>
          <%= link_to tag.name, tag_path(tag) %>
        <% end %>
      </p>
      
      <p class="story-desc">
        <%= sanitize_format work.metadata.summary %>
      </p>
      
    </li>