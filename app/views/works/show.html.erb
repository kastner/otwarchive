<!-- BEGIN navigation -->
<ul id="navi">
  <li>
    <%= link_to '&lt;&lt; ' + 'Back to story list'.t, works_path, :class => 'list-left' -%>
  </li>
  <li>
  	<% if is_author_of?(@work) -%>
	<div class="list-right">
		<strong><%= link_to 'Edit', edit_work_path(@work) %></strong>
		|
		<%= link_to 'Delete', @work, :confirm => 'Are you sure?', :method => :delete -%>
	</div>
	<% end -%>
  </li>
</ul>
<div class="clearboth"></div>
<!-- END navigation -->

<!-- BEGIN work --> 
<%= render :partial => 'work' -%>
<!-- END work --> 

<!-- BEGIN comment section -->
<div id="comments-display">
  <p>
    <%= link_to_function('Add a comment', "Element.toggle('add-comment')", :href => new_chapter_comment_path(@work.last_chapter)) %>
  </p>
                  
  <div id="add-comment" style="display : none;">   
    <%= render :partial => @comment = Comment.new, :locals => {:commentable => @work.last_chapter, :button_name => 'Create'}%> 
  </div>  

  <!-- BEGIN comments -->
  <% unless @comments.empty? %>
    <p>
      <%= link_to_function('Show/hide comments', "Element.toggle('comments')", :href => chapter_comments_path(@work.last_chapter)) %>   
    </p>
  <% end %>
  
  <div id="comments">   
    <%= render :partial => 'comments/comment_view' %> 
  </div>
  
  <!-- END comments -->
</div>
<!-- END comment section -->
