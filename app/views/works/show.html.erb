<!-- BEGIN navigation -->
<ul id="navi">
  <li>
    <%= link_to '&lt;&lt; ' + h('Back to story list').t, works_path, :class => 'list-left' -%>
  </li>
  <li>
  	<% if is_author_of?(@work) -%>
	<div class="list-right">
		<strong><%= link_to h('Edit').t, edit_work_path(@work) %></strong>
		|
		<%= link_to h('Delete').t, @work, :confirm => h('Are you sure?').t, :method => :delete -%>
	</div>
	<% end -%>
  </li>
</ul>
<div class="clearboth"></div>
<!-- END navigation -->

<!-- BEGIN work --> 
<%= render :partial => 'work' -%>
<!-- END work -->

<!-- BEGIN bookmark link -->
<%= bookmark_link(@work) %>
<div id="dynamic-bookmark" style="display:none"></div> 
<!-- END bookmark link -->

<!-- BEGIN comment section -->
<% unless @work.chapters.size > 1 %>
  <%= render :partial => 'comments/commentable', :locals => {:commentable => @work.last_chapter, :is_work => true} %>
<% end %>
<!-- END comment section -->

<%- if logged_in_as_admin? -%>
<%= render :partial => 'admin/admin_options', :locals => {:item => @work} %>
<%- end -%>
