<% form_for(@work) do |f| %>
  <% fields_for "work[metadata_attributes]", @work.metadata do |m| %>
    <p>
    <b>Title</b><br />
    <%= m.text_field :title %>
    </p>

    <p>
    <b>Summary</b><br />
    <%= m.text_area :summary %>
    </p>

    <p>
    <b>Notes</b><br />
    <%= m.text_area :notes %>
    </p>
  <% end %>
  <p>
  <b>Story, in plain text</b><br />
  <% fields_for "work[chapter_attributes][]", @work.chapters.first do |c| %>
    <%= c.text_area :content, :index => nil -%>
    <% unless @work.chapters.first.new_record? %>
      <%= c.hidden_field :id, :index => nil -%>
    <% end %>
  <% end %>
  </p>

  <p>
    <b>Expected number of chapters</b><br />
    <%= f.text_field :expected_number_of_chapters %>
  </p>

  <p>
    <b>Is complete</b><br />
    <%= f.check_box :is_complete %>
  </p>

  <p>
    <%= f.submit button_text %>
  </p>
<% end %>

