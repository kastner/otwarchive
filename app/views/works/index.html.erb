<h2><%=h "View All Stories".t %></h2>

<div id="story-filters">
  <%- form_tag('/tags') do -%>
    <% field_set_tag 'Filters (not yet functional)' do %>
      <%- for filter in @filters -%>
      <h3><%=h filter.name %></h3>
      <ul>
        <%- for tag in @tags_by_filter[filter][0..2] -%>
        <li><%= check_box_tag "filters[#{tag.id}]" %><%= label_tag "filters[#{tag.id}]", tag.name %></li>
        <%- end -%>
        <li>More...</li>
      </ul>
      <%- end -%>
    <%- end -%>
  <%- end -%>
</div>

<p>
	Sort by: 
	<%= sort_link 'Title', :title -%> |
	<%= sort_link 'Date', :date -%> |
	<%= sort_link 'Word Count', :word_count -%> 	
</p>

<ul class="story-list">
  <% for work in @works %>
	<%= render :partial => 'works/work_blurb', :locals => {:work => work} %>
  <% end %>
</ul>

<div class="pagination">
	  <%= will_paginate @works, :prev_label =>  "&laquo; Previous".t,:next_label => "Next &raquo;".t %>
</div>