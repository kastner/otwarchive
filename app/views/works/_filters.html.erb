<div id="story-filters">
  <%- form_tag(current_filter_path) do -%>
    <% field_set_tag 'Filters' do %>
			<dl>
	      <%- for filter in @filters -%>
	      <dt><%=h filter.name %></dt>
				<dd>
		      <ul>
		        <%- for tag in @tags_by_filter[filter] -%>
		        <li><%= check_box_tag "filters[#{filter.id}][]", tag.id, @selected_tags.include?(tag.id.to_s) %><%= label_tag "filters[#{filter.id}][#{tag.id}]", tag.name %></li>
		        <%- end -%>
		      </ul>
				</dd>
				<%- end -%>
			</dl>
			<p><%= submit_tag "Filter Stories" %></p>
    <%- end -%>
  <%- end -%>
</div>