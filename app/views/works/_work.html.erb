<div class="story-show">

  <%= render :partial => 'meta' %>
  
  <%- unless @work.series.blank? -%>
  <%= show_series_data(@work) %>
  <%- end -%> 

  <h2 class="story-title">
    <% if @work.restricted %><%= image_tag("lockblue.png", :size => "15x15", :alt => "(Restricted)".t) %><% end %>
    <% if @work.hidden_by_admin %><%= image_tag("lockred.png", :size => "15x15", :alt => "(Hidden by Admin)".t) %><% end %>
    <%=sanitize @work.title, :tags => %w(em i b strong strike small) %>
  </h2>
  <h3 class="story-author">
   <%= byline(@work) -%>
  </h3>
  
  <p class="story-summary">
    <%=sanitize_limited @work.summary %>
  </p>
  
  <p class="story-notes">
    <%=sanitize_format @work.notes %>
  </p>
  
  <% if @work.is_wip -%>
  <p class="story-complete">
    <%= wip_message(@work) %>
  </p>
  <% end -%>

  <!--Toggle between single-chapter view / view entire work -->
	<div id="single_all_chaps">
    <%= render :partial => 'link_single_chap' %>
  </div>
  
	<!--Chapters go here -->
  <div id="chapters">
	  <%= render :partial => 'chapters/chapters' -%>
 	</div>
 	
 	<%- unless @work.parents.blank? -%>
 	<div id="parents">
 	  <p>Inspired by:<p>
 	  <ul>
 	  <%- for parent in @work.parents -%>
 	    <li><%= link_to parent.title, parent %></li>
 	  <%- end -%>
 	  </ul>
	</div>
 	<%- end -%>
 	
 	<%- unless @work.approved_children.blank? -%>
 	<div id="children">
 	  <p>Stories inspired by this one:<p>
 	  <ul>
 	  <%- for child in @work.approved_children -%>
 	    <li><%= link_to child.title, child %></li>
 	  <%- end -%>
 	  </ul>
	</div>
 	<%- end -%>
 	  
</div>
