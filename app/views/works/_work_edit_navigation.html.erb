<ul class="navigation">
	<li><%= link_to "Add chapter", new_work_chapter_path(@work) -%></li>
  <%- if @chapters.size > 1 -%>
  <li><%=h 'Edit chapter:' %> 
      <%- for chapter in @chapters -%>
        <%= link_to h(chapter.position), [:edit, @work, chapter] -%>
      <%- end -%></li>
	<li><%= link_to "Manage chapters", manage_work_chapters_path(@work) -%></li>
  <%- end -%>
  <%- unless (@work.pseuds - current_user.pseuds).empty? -%>
	<li><%= link_to "Remove me as author", { :action => "edit", :remove => "me"}, :confirm => 'This will remove you from all chapters as well. Are you sure?' -%></li>
  <%- end -%>
	<li><%= link_to "Orphan work", {:controller => 'orphans', :action => 'new', :work_id => @work.id} -%></li>
	<li><%= link_to 'Delete work', @work, :confirm => 'Are you sure?', :method => :delete -%></li>
</ul>					
