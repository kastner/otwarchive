<!-- This partial renders a form for uploading a work from an existing URL -->
  <p class="message">
    <strong>Please note!</strong> 
    This feature is in the early stages of development and may not work well 
    (or at all!) on many existing works. 
  </p>
  <% form_tag url_for(:controller => :works, :action => :upload_work) do %>
    <p>
      <%= label_tag "work_url", h("URL for existing work: ".t) -%>
      <%= text_field_tag "work_url" -%>
      <%= submit_tag 'Load Story From URL' -%>
    </p>
  <%- end -%>
