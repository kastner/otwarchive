<h1>Listing tags</h1>

<table>
  <tr>
  </tr>

<% for tag in @tags %>
  <tr>
    <td><%= tag.name %>
    <% if tag.banned? %>(Banned)<% end -%>
    <% if tag.canonical? %>(Canonical)<% end -%></td>
    <td><%= tag.tag_category.name %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tag', new_tag_path %>
