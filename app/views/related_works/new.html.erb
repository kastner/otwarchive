<h1><%=h 'New related_work'.t %></h1>

<% form_for(@related_work) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :parent_id %><br />
    <%= f.text_field :parent_id %>
  </p>
  <p>
    <%= f.label :work %><br />
    <%= f.text_field :work %>
  </p>
  <p>
    <%= f.label :reciprocal %><br />
    <%= f.check_box :reciprocal %>
  </p>
  <p>
    <%= f.submit "Create".t %>
  </p>
<% end %>

<%= link_to 'Back'.t, related_works_path %>
