<h1>Invite a Friend</h1>

<p><%= ('You have ' + user_invitations(current_user) + ' remaining.').t %></p>

<% form_for @invitation do |f| %>
  <dl>
    <dt><%= f.label :recipient_email, "Friend's email address" %></dt>
    <dd><%= f.text_field :recipient_email %></dd>
  </dl>
  <p><%= f.submit "Invite!" %></p>
<% end %>
