<%- form_tag search_path, :method => :get do -%>
<div id="search">
  <%= text_field_tag :query, params[:query], :class => 'text' %>
  <%= submit_tag 'Go', :class => 'button' %>
</div>
<%- end -%> 

<%- unless @results.nil? -%>
  <h1>Search results for '<%= h params[:query] %>'</h1>
  <%- unless @results.empty? -%>
    <ul>
    <%- for result in @results -%>
      <li><%= debug(result) %></li>
    <%- end -%>
    </ul>
  <%- else -%>
    <p>No results were found!</p>
  <%- end -%>
<%- end -%>