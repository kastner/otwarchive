<%= render :partial => 'search_box' %>

<p>Under construction; currently searching by: title, summary, notes, chapter content.</p> 

<%- unless @results.nil? -%>
  <h1><%= @results.length %> search result(s) for '<%= h params[:query] %>'</h1>
  <%- unless @results.empty? -%>
    <ul class="story-list">
    <%- for result in @results -%>
      <%= render :partial => 'works/work_blurb', :locals => {:work => result} %>
    <%- end -%>
    </ul>
  <%- else -%>
    <p>No results were found!</p>
  <%- end -%>
<%- end -%>

<div class="pagination">
	  <%= will_paginate @results, :prev_label =>  "&laquo; Previous".t,:next_label => "Next &raquo;".t %>
</div>