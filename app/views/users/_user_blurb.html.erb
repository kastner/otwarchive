<li class="user">
  <div>
    <h3><%= link_to(user.login, user_path(user)) -%></h3>
    <ul class="pseuds">
    	<% user.pseuds.each do |pseud| -%> 
				<li><%= link_to pseud.name, user_works_path(user, :pseuds => [pseud.name]) %></li>
			<% end -%>
  	</ul>
	<p><%= image_tag("icon_placeholder.png", :size => "50x50", :alt => "(Icon!)") %></p>
	<ul class="tags">
    <%- user.most_popular_tags(:categories => Tag::USER_DEFINED, :limit => 5).each do |tag| -%>
      <li><%= link_to tag.name, works_path(:user_id => user.login, :selected_tags => [tag.id]), :class => 'tag' %></li>
    <%- end -%>
	</ul>
  </div>
</li>
