<h2><%=h 'What do you want to do with your works?'.t %></h2>

<% form_tag(@user, :method => 'delete') do -%>
<% unless @user.coauthors.blank? %>
<fieldset>
	<legend><%= 'Works You Made With Others'.t %></legend>
<p>
    <%= "You have %d work(s) co-authored with the following users:".t/@coauthored_works.size %>&nbsp;<%= print_coauthors(@user) %>
</p>
<p>
    <%= 'You are not able to delete these as they are shared works.'.t %>
</p>
<p>
    <%= radio_button_tag 'coauthor', 'keep_pseud', true %>
    <%= label_tag 'coauthor_keep_pseud', 'Leave my pseud but attach to the orphan account'.t %>
</p>
<p>
    <%= radio_button_tag 'coauthor', 'orphan_pseud' %>
    <%= label_tag 'coauthor_orphan_pseud', "Change my pseud to 'orphan' and attach to the orphan account".t %>
</p>
<p>
    <%= radio_button_tag 'coauthor', 'remove' %>
    <%= label_tag 'coauthor_remove', 'Remove me completely as co-author'.t %>
</p>
</fieldset>
<% end -%>
<% unless @sole_authored_works.blank? -%>
<fieldset>
	<legend><%= 'Works You Made By Yourself'.t %></legend>
<p>
    <%= "You have %d work(s)".t/@sole_authored_works.size %>&nbsp;<%=h "under the following pseuds:".t %>&nbsp;<%= print_pseuds(@user) %>
</p>
<p>
    <%=h 'You are able to delete these works; however, you may wish to orphan them instead.'.t %>
</p>
<p>
    <%= radio_button_tag 'sole_author', "keep_pseud", true %>
    <%= label_tag 'sole_author_keep_pseud', 'Leave my pseud but attach to the orphan account'.t %>
</p>
<p>
    <%= radio_button_tag 'sole_author', "orphan_pseud" %>
    <%= label_tag 'sole_author_orphan_pseud', "Change my pseud to 'orphan' and attach to the orphan account".t %>
</p>
<p>
    <%= radio_button_tag 'sole_author', "delete" %>
    <%= label_tag 'sole_author_delete', 'Delete works'.t %>
</p>
</fieldset>
<% end -%>
<fieldset>
<p class="submit cancel">
		<%= submit_tag "Save".t, :confirm => "Are you sure? This can't be undone!".t %> <%= submit_tag 'Cancel'.t, :name => 'cancel_button', :class => 'cancel' %>
</p>
</fieldset>
<%- end %>