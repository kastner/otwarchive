  <dl id="passwd">
	  <dt><%= f.label :password, "Change Password".t %></dt>
	  <dd><%= f.password_field :password %></dd>
		  
    <dt><%= f.label :password_confirmation, "Confirm New Password".t %></dt>
	  <dd><%= f.password_field :password_confirmation %></dd>
		<% fields_for :check do |check| %>
			<dt><%= check.label :password_check, "Please enter your old password".t %></dt>
			<dd><%= check.password_field :password_check%></dd>
 		<% end %>
  </dl>