<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
"http://www.w3.org/TR/html4/strict.dtd">

<html>
  <head>
    <meta name="generator" content="HTML Tidy, see www.w3.org">
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">

    <title><%=h ArchiveConfig.APP_NAME .t %> 
		<% unless ArchiveConfig.REVISION.blank? -%>(rev. <%= ArchiveConfig.REVISION %>)<% end %>&gt;&gt;<%= controller.controller_name %>
        <%= controller.action_name %>
    </title>

	<%= render :partial => 'layouts/includes' %>

  </head>

  <body onload="hideFormFields(); initSelect('languages_menu')" >
  
	<%= render :partial => 'layouts/header' %>
  
	  <!-- BEGIN sidebar -->
	  <%- if @user && !@user.new_record? -%> 
	  <div id="dashboard-sidebar">
	    <%= render :partial => 'users/sidebar' %>
	  </div>
	  <%- end -%>
	  <!-- END sidebar -->
  
	  <!-- BEGIN main -->
	  <div id="main" class="<%= controller.controller_name + '-' + controller.action_name -%>">
	    <%= flash_div :error, :warning, :notice %>
		<div class="clearboth"></div>
	    <%= yield  %>
	  </div>
	  <!-- END main -->
		
	  <%= render :partial => 'layouts/footer' %>

  </body>
</html>

