<h2>Mass Tag Assignment</h2>

<dl>
  <%- form_tag tag_wranglings_path do -%>
    <dt>Assign to:</dt>
    <dd><%= select("parent", 'parent_id', @possible_parents.collect {|p| [ p.name, p.id ] }, { :include_blank => true }) %></dd>
    <dt></dt>
    <%- @tags.each do |tag| %>
      <dd><%= check_box_tag("tags[]", tag.name, false) %><%= label :tag, link_to_edit_tag(tag) %></dd>
    <%- end -%>
  <p class = "submit"><%= submit_tag "Assign" %></p>
  <%= "(Click on a tag to select it for individual editing)".t %>
  <%- end -%>
</dl>

<%= tag_wrangler_footer %>
